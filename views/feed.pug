extends layout

block content
  div.feed-container
      each post in posts 
        div.post.card
          img(src= ((undefined == post.PostPicture) ? '' : '/'+ post.PostPicture)).img-post-feed
          div.card-body
            h5.card-title=post.userId
            p.card-text= post.PostDescription 
            p= post.PostLike 
            p= post.PostDate
