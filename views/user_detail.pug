extends layout 


block content 
    h1= title
    div.pofil_data
        strong= (( undefined == user.UserId) ? '' : '@'+user.UserId)
        p= ((undefined == user.UserPseudo) ? '': user.UserPseudo)
        img(src = ((undefined == user.UserPicture) ? '/images/default_user_image.jpg' : ''))
        p= user.UserBiography
        a(href= '/home/user/'+user.UserId+'/post/create') Pour cr√©er un post;
    div.posts_container 
        each post in posts 
            div.post 
                p= post.PostDescription 
                p= post.PostLike 
                p= post.PostDate
                a(href='/home/user/'+user.UserId+'/post/'+post._id+'/update')
                    img(src= ((undefined == post.PostPicture) ? '' : '/'+ post.PostPicture)) 
                ul 
                    each tag in post.PostTags 
                        li= tag
