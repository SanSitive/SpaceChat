extends layout 

block content 
    h1= title
    if(user)
        div.profil_data
            strong= (( undefined == user.UserId) ? '' : '@'+user.UserId)
            p= ((undefined == user.UserPseudo) ? '': user.UserPseudo)
            img(src = ((undefined == user.UserPicture) ? '/images/default_user_image.jpg' : '/'+user.UserPicture))
            p= user.UserBiography
            a(href= '/home/user/'+user.UserId+'/post/create') Pour cr√©er un post
        div.posts_container 
            each post in posts 
                div.post 
                    p= post.PostDescription 
                    p= post.PostLike 
                    p= post.PostDate
                    a(href='/home/user/'+user.UserId+'/post/'+post._id)
                        img(src= ((undefined == post.PostPicture) ? '' : '/'+ post.PostPicture)) 
                    ul 
                        each tag in post.PostTags 
                            li= tag
    else 
        p User not found
